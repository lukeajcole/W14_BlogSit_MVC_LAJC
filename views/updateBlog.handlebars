<form class="form update-form">
    <div hidden='true' id='post_id' data-value='{{blog.id}}'></div> 
    <h3>USER: {{blog.user.name}}</h3> 
    <h3>Date Created: {{format_date blog.date_created}}</h3> 
  <h3>Title:</h3>  
  <div class="form-group">
    <input class="form-input" type="text" style="width:800px; " id="title-blog" value='{{blog.title}}'/>
  </div>
  <h3>Content:</h3>
  <div class="form-group">
    <textarea id="content-blog" rows = "5" cols = "111" name = "description">{{blog.content}}</textarea>
  </div>
    <div class="form-group">
    <button class="btn btn-primary" type="submit">Submit</button>
  </div>
</form>

<script src="/js/update.js"></script>