{{!-- Prompt to enter title and contents with a create/save button
    When saved, it goes back to dashboard --}}

<h3>Fill out the form to create a new blog</h3>
<form class="form newBlog-form">
  <h3>Title:</h3>  
  <div class="form-group">
    <input class="form-input" type="text" style="width:800px; " id="title-blog" />
  </div>
  <h3>Content:</h3>
  <div class="form-group">
    <textarea id="content-blog" rows = "5" cols = "111" name = "description"></textarea>
  </div>
    <div class="form-group">
    <button class="btn btn-primary" type="submit">Submit</button>
  </div>
</form>

<script src="/js/newBlog.js"></script>